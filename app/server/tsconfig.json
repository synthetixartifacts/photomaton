{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@photomaton/shared": ["../shared/src"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/__tests__/**", "src/**/*.test.ts", "src/**/*.spec.ts"],
  "references": [
    { "path": "../shared" }
  ]
}