import React, { useState } from 'react';
import { PresetPromptEditor } from '../PresetPromptEditor';
import type { PresetsTabProps } from './types';
import type { ClientConfig } from '../../services/ConfigService';

export const PresetsTab: React.FC<PresetsTabProps> = ({ presets, onSave }) => {
  const [values, setValues] = useState(presets);
  const [editingPreset, setEditingPreset] = useState<ClientConfig['presets']['availablePresets'][0] | null>(null);

  const togglePreset = (id: string) => {
    const updatedPresets = values.availablePresets.map((preset) =>
      preset.id === id ? { ...preset, enabled: !preset.enabled } : preset
    );
    setValues({ ...values, availablePresets: updatedPresets });
  };

  const handleEditPreset = (preset: ClientConfig['presets']['availablePresets'][0]) => {
    setEditingPreset(preset);
  };

  const handleSaveEditedPreset = (editedPreset: ClientConfig['presets']['availablePresets'][0]) => {
    const updatedPresets = values.availablePresets.map((preset) =>
      preset.id === editedPreset.id ? editedPreset : preset
    );
    setValues({ ...values, availablePresets: updatedPresets });
    setEditingPreset(null);
  };

  return (
    <>
      <div className="space-y-6">
        <div className="bg-blue-900/20 rounded-lg p-4 border border-blue-800/30">
          <p className="text-sm text-blue-300">
            <strong>Nano Banana Optimization:</strong> Click "Edit Prompt" to customize prompts using advanced structured format optimized for Gemini's image generation. Advanced mode follows best practices for better results.
          </p>
        </div>

        <div className="space-y-4">
          {values.availablePresets.map((preset) => (
            <div key={preset.id} className="bg-gray-800 rounded-lg p-4">
              <div className="flex items-center justify-between">
                <div className="flex-1">
                  <div className="flex items-center space-x-2">
                    <span className="text-2xl">{preset.icon}</span>
                    <h4 className="text-white font-semibold">{preset.name}</h4>
                    {(preset as any).advancedPrompt && (
                      <span className="px-2 py-1 bg-blue-600/20 text-blue-400 text-xs rounded-full">
                        Advanced
                      </span>
                    )}
                  </div>
                  <p className="text-gray-400 text-sm mt-1">{preset.description}</p>
                  <div className="mt-2">
                    <p className="text-gray-500 text-xs font-mono line-clamp-2">
                      {(preset as any).advancedPrompt ? (preset as any).advancedPrompt.basePrompt : preset.prompt}
                    </p>
                  </div>
                </div>
                <div className="flex items-center space-x-2">
                  <button
                    onClick={() => handleEditPreset(preset)}
                    className="px-3 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-colors"
                  >
                    Edit Prompt
                  </button>
                  <button
                    onClick={() => togglePreset(preset.id)}
                    className={`px-4 py-2 rounded-lg transition-colors ${
                      preset.enabled
                        ? 'bg-green-600 hover:bg-green-700 text-white'
                        : 'bg-gray-700 hover:bg-gray-600 text-gray-400'
                    }`}
                  >
                    {preset.enabled ? 'Enabled' : 'Disabled'}
                  </button>
                </div>
              </div>
            </div>
          ))}
        </div>

        <button
          onClick={() => onSave(values)}
          className="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors"
        >
          Save All Presets
        </button>
      </div>

      {editingPreset && (
        <PresetPromptEditor
          preset={editingPreset}
          onSave={handleSaveEditedPreset}
          onCancel={() => setEditingPreset(null)}
        />
      )}
    </>
  );
};
