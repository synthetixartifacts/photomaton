{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "paths": {
      "@photomaton/shared": ["../shared/src"],
      "@/*": ["./src/*"]
    },
    "allowImportingTsExtensions": true,
    "resolvePackageJsonExports": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "types": ["vite/client"]
  },
  "include": ["src"],
  "references": [
    { "path": "../shared" }
  ]
}